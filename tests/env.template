# Test Environment Configuration
# Copy this file to .env and update with your values

# Environment
TEST_ENV=local  # local, dev, staging, ci

# API Configuration
API_BASE_URL=http://localhost:8000
API_TIMEOUT=30
VERIFY_SSL=false
MAX_RETRIES=3
RETRY_DELAY=1.0


# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Test Data
CLEANUP_AFTER_TESTS=true
USE_FIXTURES=true
SEED_DATABASE=false

# Logging
LOG_LEVEL=DEBUG
LOG_TO_FILE=true
LOG_REQUESTS=true
LOG_RESPONSES=true

# Test Execution
PARALLEL_TESTS=false
WORKERS=4
FAIL_FAST=false
VERBOSE=true

# Feature Flags
SKIP_SLOW_TESTS=false
SKIP_EXTERNAL_TESTS=false
SKIP_INTEGRATION_TESTS=false

